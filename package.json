{
  "name": "@aragon/templates",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for all Aragon templates",
  "author": "Aragon Association <legal@aragon.org>",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "install": "npm run bootstrap",
    "bootstrap": "lerna bootstrap",
    "test": "npm run test:all",
    "test:all": "lerna run --scope=@aragon/templates-* --concurrency=1 --stream test",
    "test:bare": "lerna run --scope=@aragon/templates-bare --stream test",
    "test:democracy": "lerna run --scope=@aragon/templates-democracy --stream test",
    "test:multisig": "lerna run --scope=@aragon/templates-multisig --stream test",
    "test:trust": "lerna run --scope=@aragon/templates-trust --stream test",
    "test:company": "lerna run --scope=@aragon/templates-company --stream test",
    "test:company:board": "lerna run --scope=@aragon/templates-company-board --stream test",
    "lint": "lerna run --scope=@aragon/templates-* lint",
    "link:os": "lerna exec --scope '@aragon/templates-*' 'npm link @aragon/os'"
  },
  "devDependencies": {
    "lerna": "^2.8.0"
  }
}
